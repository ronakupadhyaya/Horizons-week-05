<h1>Books</h1>

<h2>Page: {{page}}</h2>

{{#if prev}}
<a href="?page={{prev}}" class="btn btn-default">Previous Page</a>
{{/if}}

{{#if hasNext}}
<a href="?page={{next}}" class="btn btn-default">Next Page</a>
{{/if}}

<br><br>

<table class="table table-striped table-bordered">
  <tr>
    <th>
      Title
    </th>
    <th>
      Author
    </th>
  </tr>
{{#each books}}
  <tr>
    <td>
      {{title}}
    </td>
        <td>
      {{author}}
    </td>
  </tr>
{{/each}}
</table>
