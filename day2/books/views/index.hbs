<h1>Books</h1>
{{#if prev}}
<a href="?page={{prev}}" class="btn btn-default" id="prev">Previous Page</a>
{{/if}}
<a href="?page={{next}}" class="btn btn-default" id="next">Next Page</a>

<table class="table table-striped table-bordered">
  <tr>
    <th>
      Title
    </th>
  </tr>
{{#each books}}
  <tr>
    <td>
      {{title}}
    </td>
  </td>
{{/each}}
</table>
<script type="text/javascript">
  if ($('tbody').children().length-1<21)
    $('#next').hide() 
  $('tr').last().hide()
</script>