<h3>Restaurants</h3>

<form method="get">
  <fieldset>
    <p>
      <label>Sort by: </label>
     <select id="sort" name="sort">

        <option value = "1">distance</option>
        <option value = "2">price</option>
        <option value = "3">rating</option>
        <option value = "4">Alphabetical</option>
        <option value = "4">Number of reviews</option>
      </select>
      <select id="order" name="order">
         <option value = "1">Ascending</option>
         <option value = "2">Descending</option>
       </select>
    </p>
     <input type="submit" value="Order" />
  </fieldset>
</form>

<table class="table table-hover">
  <thead>
    <td><b>Name</b></td>
    <td><b>price</b></td>
    <td><b>Category</b></td>
    <td><b>openTime</b></td>
    <td><b>closingTime</b></td>
    <td><b>Links</b></td>
  </thead>
  <tbody>
    {{#each restaurants}}
    <tr>
      <td>{{name}}</td>
      <td>{{price}}</td>
      <td>{{category}}</td>
      <td>{{openHoursEST.openTime}}</td>
      <td>{{openHoursEST.closingTime}}</td>
      <td>
        <a href="/restaurants/{{id}}">Restaurant Page</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<a href="/restaurants/new">New Restaurant</a>
