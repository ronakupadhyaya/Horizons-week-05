<script>
  var socket = io();
  socket.on('connect', function() {
    console.log('Connected!');
  });

  $('#send').click(function(){
    var msg = $('#input').val();
    $('#input').val('');
    //console.log('message: ', msg);
    socket.emit('message', msg)
  })

  $('#userSubmit').on('click', function(){ //use onClick
    var username = $('#username').val();
    //console.log(username);
    $('#username').val('');
    socket.emit('login', username);
  })

  $('#room1').on('click', function(){
    var roomNum = 1;
    socket.emit('room', roomNum)
  })
  $('#room2').on('click', function(){
    var roomNum = 2;
    socket.emit('room', roomNum)
  })

  socket.on('serverMessage', function(msg){
    $('#textbox').append('<li>' + msg.username + ":" +  msg.text +'</li>');
  })
  socket.on('joinedroom', function(user){
    $('#textbox').append('<li>' + "Welcome to the Chatroom "+ user + '</li>');
  })


