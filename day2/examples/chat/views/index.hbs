<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
<script>
  // starts the connection
  var socket = io('localhost:3000');
  socket.on('connect', function() {
    console.log('Connected! on client side');
  });

  //when a user submits their username
  $('.submituser').click(function(){
    var user = $('.typename').val();
    $('.typename').val('');
    $('.login').empty();
    $('.login').append('<p>Logged in as: '+ user +'</p>');
    //emit username event passing in user data
    socket.emit('username', user);
  })

  //on submit button emit the message event passing message contents as data
  $('.submitbutton').click(function(){
    var msg = $('.typebox').val()
    $('.typebox').val('')
    socket.emit('message', msg)
  })

  //on emitted message event from the server append an li section
  socket.on('message', function(msg){
    $('#messagesList').append('<li>' + msg + '</li>')
  })

  //on joined room append joined room li
  socket.on('joinedroom', function(newUser){
    $('#messagesList').append('<li style="color: red">' + newUser + ' has joined the room.</li>')
  })

  //on welcome append welcome li
  socket.on('welcome', function(user){
    $('#messagesList').append('<li style="color: blue">' + user + ' welcome to this awesome chat!</li>')
  })
</script>
