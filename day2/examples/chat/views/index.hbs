<script type="text/javascript">
  var socket = io();
  socket.on('connect', function() { // connect is a special keyword
    console.log('Connected!');
  })

  $('.submitbutton').click(function(){
    var msg = $('.typebox').val()
    $('.typebox').val('')
    socket.emit('message', msg)
  });

  socket.on('recievedMessage', function(msg){
    console.log(msg);
    $('.textbox').append(msg + "<br />");
  });

  // Assigning a username to specific socket
  $('.setuserbutton').click(function(){
    var username = $('.namebox').val();
    $('.namebox').val('');
    socket.emit('login', username);
  });

  // Listening for new users joining the room

  socket.on('joinedroom', function(newusername){
    $('.textbox').append(newusername + " " + "has joined the Chatroom!<br />");
  });

  socket.on('welcome', function(newusername){
    $('.textbox').append("Welcome to the Chatroom" + " " + newusername + "!");
  });

  // Joining room 1
  $('.room1').on("click", function(){
    var roomNum = 1;
    socket.emit('enterroom', roomNum)
  })


  // Joining room 2
  $('.room2').on("click", function(){
    var roomNum = 2;
    socket.emit('enterroom', roomNum)
  })

</script>
