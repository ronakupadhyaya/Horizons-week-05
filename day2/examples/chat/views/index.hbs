<script>
  var socket = io();
  socket.on('connect', function() {
    console.log('Connected!');
  })

  $('.submitbutton').click(function(evt){
    var msg = $('.typebox').val();
    $('.typebox').val("");
    socket.emit('message', msg);
    evt.preventDefault();
  })

  $('#registerButton').click(function(evt){
    var name = $('#username').val();
    $('#username').val('');
    socket.emit('username', name);
    evt.preventDefault();
  })

  socket.on('joinedRoom', function(username){
    $('.textbox').append("(" + username + " has joined the chatroom)" + '<br>');
  })

  socket.on('iJoinedRoom', function(username){
    $('.textbox').append("(Welcome to the chatoom " + username + ')<br>');
  })

  socket.on('loginStatus', function(login){
    alert('You must be logged in!');
  })

  socket.on('serverMessage', function(serverMessage){
    $('.textbox').append(serverMessage + '<br>');
  })
</script>
