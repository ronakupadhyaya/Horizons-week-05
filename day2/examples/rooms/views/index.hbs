<p id="welcome">Welcome! Select a Room to join.</p>
<button id="1">Join Room 1</button>
<button id="2">Join Room 2</button>
<button id="p">Poke!</button>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
  var socket = io();
  socket.on('connect', function() {
    console.log('Connected! on client side');
  });

  var room;

  //if button 1 is clicked the room data is just room1
  $('#1').click(function(){
    room = 'room1'
    socket.emit('room', room)
    $('#welcome').text('Welcome! You have joined: '+room)
  })

  //if button 1 is clicked the room data is just room2
  $('#2').click(function(){
    room = 'room2'
    socket.emit('room', room)
    $('#welcome').text('Welcome! You have joined: '+room)
  })

  //if poke us clicked send the message of being poked
  $('#p').click(function(){
    socket.emit('poked', ' has been poked')
  })

  //on emitted poke event from backend append the message
  socket.on('poke', function(msg){
    $('#welcome').text(msg)
  })
</script>
