<p>Welcome! Select a Room to join.</p>
<button id = "1" >Join Room 1</button>
<button id = "2">Join Room 2</button>
<button id = "poke">Poke!</button>

<!-- <script src = "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/core.js"></script> -->
<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
<script>
  var room = '0';

  var socket = io();
  socket.on('connect', function() {
    console.log('Connected!');
  });

  $('#1').click(function(){
    room = '1';
    socket.emit('room', "1")
  })

  $('#2').click(function(){
    room = '2'
    socket.emit('room', "2")
  })

  $('#poke').click(function(){
    if(room === '1'){
      socket.emit("poke", "1")
    }else if(room === '2'){
    //  io.in(room).emit("poke", "1")
      socket.emit('poke', '2')
    }
  })

  socket.on('poke_msg', function(room_num){
    console.log(room_num + 'was poked');
    $('body').append(`<p>Room ${room_num} has been poked</p>`)
  })



</script>
