<p>Welcome! Select a Room to join.</p>

<ul id="messages">

</ul>

<div class="joinRoom">
  <button id="joinRoom" value="1">Join Room 1</button>
  <button id="joinRoom" value="2">Join Room 2</button>
  <button id="poke">Poke!</button>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
  var socket = io();
  socket.on('connect', function() {
    console.log('Connected!');
  });

  $(".joinRoom").on('click', '#joinRoom', function(){
    console.log("emited 'room' with value: ", $(this).val());
    socket.emit('room', $(this).val());
  })

  $(".joinRoom").on('click', '#poke', function(){
    console.log("emited 'poke'");
    socket.emit('poke');
  })

  socket.on('serverMessage', function(data){
    $("#messages").append('<li>' + data + '</li>');
  })

</script>
