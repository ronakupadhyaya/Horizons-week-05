<p id="para">Welcome! Select a Room to join.</p>
<button id="btn1">Join Room 1</button>
<button id="btn2">Join Room 2</button>
<button id="btnpoke">Poke!</button>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
<script>
  var socket = io();
  socket.on('connect', function() {
    console.log('Connected!');
  });
  $('#btn1').click(function(){
    console.log("button 1 clicked");
    socket.emit('room','one');
  })
  $('#btn2').click(function(){
    console.log("button 2 clicked");
    socket.emit('room','two');
  })
  socket.on('welcome',function(msg){
    $('#para').text(msg);
  })
  $('#btnpoke').click(function(){
    console.log("button poke clicked");
    socket.emit('poke');
  })
</script>
