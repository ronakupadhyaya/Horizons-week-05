<p class="messages">Welcome! Select a Room to join.</p>
<button id="joinRoom1">Join Room 1</button>
<button id="joinRoom2">Join Room 2</button>
<button id="poke">Poke!</button>

<div class="error">

</div>
<script src="/socket.io/socket.io.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
  var socket = io();
  socket.on('connect', function() {
    console.log('Connected!');
  });
  socket.on('message', (msg) => {
    $('.messages').text(msg);
  });
  socket.on('error', (msg) => {
    $('.error').html($(`<p style="color: red"> ${msg} </p>`));
  });
  socket.on('poke', (room) => {
    $('.messages').text(`${room} has been poked`);
  })
  $(document).ready( () => {
    $('#joinRoom1').click( () => {
      socket.emit('room', 'Room 1');
    });
    $('#joinRoom2').click( () => {
      socket.emit('room', 'Room 2');
    });
    $('#poke').click( () => {
      socket.emit('poke');
    });
  });
</script>
