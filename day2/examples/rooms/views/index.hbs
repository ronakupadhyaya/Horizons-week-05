<p>Welcome! Select a Room to join.</p>
<button id="room1">Join Room 1</button>
<button>Join Room 2</button>
<button id="poke">Poke!</button>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>

<script
  src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>

<script>

var socket = io('localhost:3000');

//CONNECT
  socket.on('connect', function() {
    console.log('Connected!');
  });

  $('#room1').click(function() {
    socket.emit('join_room1')
  })

//GENERAL POKE COMMANDS
  $('#poke').click(function() {
    console.log('hello')
    socket.emit('poke')
  })
  socket.on('joinedroom', function(){
    console.log("someone joined")
  })

  socket.on('pokedAll', function(message) {
    console.log(message)
    $('body').append('<li style=color:red>' + message +'</li>')
  })

</script>
