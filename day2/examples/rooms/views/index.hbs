<p id="header-message">Welcome! Select a Room to join.</p>
<button class="join" id="1">Join Room 1</button>
<button class="join" id="2">Join Room 2</button>
<button class="poke" id="">Poke!</button>

<ul id="pokes">
</ul>

<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();
  socket.on('connect', function() {
    console.log('Connected!');
  });

  $('body').on('click','.join',function(){
    var room = $(this).attr('id');
    socket.emit('room',room);
    $('#header-message').text(`Welcome to room ${room}`);
    $('.poke').attr('id',`${room}`);
    $('#pokes').html('');
  });

  $('body').on('click','.poke',function(){
    var room = $(this).attr('id');
    socket.emit('poke',room);
  });

  socket.on('poke',function(room){
    $('#pokes').append(`<li>Room ${room} has been poked`);
  });
</script>
