<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <h1>Product</h1>

    <table style='width: 100%'>
      <tr>
        <th></th>
      </tr>
      {{#each productSingle}}

      <h1>{{title}}</h1>
        <td>
          <img height="64" src="{{imageUri}}">
          <p>{{description}}</p>
          <td>{{price}}</td>
        </td>
      {{/each}}
    </table>
    <form action="/cart/add/:pid" method="post">
    <button type='submit' class='btn btn-purchase'>Add to Cart</button>
   </form>
  </div>
</div>
