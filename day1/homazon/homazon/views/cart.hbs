<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <h1>Product</h1>

    <table style='width: 100%'>
      <tr>
        <th></th>
      </tr>
      {{#each cart}}
      <h1>{{title}}</h1>
        <td>
          <img height="64" src="{{imageUri}}">
          <form action="/cart/add/{{_id}}" method="post">
          <button type='submit' class='btn btn-purchase'>Add Another</button>
         </form>
          <a href="/cart">Remove</a>
          <td>{{price}}</td>
        </td>
      {{/each}}
    </table>
    <form action="/cart" method="post">
    <button type='submit' class='btn btn-purchase'>Empty Cart</button>
   </form>
   <form action="/cart" method="post">
   <button type='submit' class='btn btn-purchase'>Checkout With Stripe Cart</button>
  </form>
  </div>
</div>
