<h2>Cart</h2>
{{#each cart}}
  {{title}}<br>
  {{description}}<br>
  <img src={{imageUri}} style="width:200px;height:200px;"><br>
<br>

<form method="post" action='/cart/add/{{_id}}'>
  <input type="submit" value="Add to Cart"></input>
</form>

<form method="post" action='/cart/delete/{{_id}}'>
<input type="submit" value="Delete"></input>
</form>

<form method="post" action='/cart/delete'>
<input type="submit" value="Empty Cart"></input>
</form>
{{/each}}
