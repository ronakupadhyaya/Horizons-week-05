<h3>Product page</h3>
<h2 class="center">{{product.title}}</h2>
<table class="table table-hover">
<a class="btn btn-primary" href="/cart/delete">empty cart </a>
  <thead>
    <td><b>Name</b></td>
    <td><b>description</b></td>
    <td><b>image</b></td>
  </thead>
  <tbody>

    {{#each products}}
    <tr>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td><img src='{{imageUri}}' width='35px'/></td>
    <td><a class="btn btn-primary" href="/cart/delete/{{_id}}">delete from cart</a></td>
    </tr>
    {{/each}}

  </tbody>
</table>
