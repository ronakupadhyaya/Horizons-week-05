
<a class="btn btn-danger" href="/logout">Logout</a>
<div class="product-container">
  <h2> Shopping Cart </h2>
  <table class="table table-hover">
  <tbody>
    {{#each items}}
    <tr>
      <td> <img width="150px" src="{{imageUri}}" /> </td>
      <td> {{product.title}} </td>
      <td> <a href="//cart/add/{{_id}}"> Add another </a> </td>
      <td> <a href="/cart/delete/{{_id}}"> Remove </a> </td>
      <td> ${{product.price}} X {{quantity}} </td>
    </tr>
    {{/each}}
    <tr>
      <td> Total: ${{product.price}} </td>
      <td> <a class="btn btn-danger" href="/cart/delete" >Empty Cart</a> </td>
      <td> <a class="btn btn-primary" href="/" > Shop more</a> </td>

      <td> <a class="btn btn-primary" href="/" >Checkout With Stripe</a> </td>
    </tr>
  </tbody>
</table>
</div>
