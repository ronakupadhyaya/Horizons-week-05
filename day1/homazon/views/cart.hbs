<div class="col-xs-offset-8 col-xs-4">
  <form action="/logout" method="get">
    <button type="submit" class="btn btn-primary">Log Out</button>
  </form>
</div>

<table>
  <th>Shopping Cart</th>
  {{#each cart}}
    <tr>
      <tr>
        <td>
          <img src="{{this.imageUri}}" alt="image" style="width:90px">
        </td>
        <td>
          {{this.title}}
        </td>
        <td>
          <a href="/cart/add/{{this._id}}">Add another</a>
        </td>
        <td>
          <a href="/cart/delete/{{this._id}}">Remove</a>
        </td>
        <td>
          Amount: {{quantities[(this._id)]}}
        </td>
      </tr>
    </tr>
  {{/each}}
</table>
