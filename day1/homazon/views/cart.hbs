<h1>Cart</h1>
<ul>
{{#each cart}}
<li>{{title}} <a href="/product/{{_id}}">{{title}}</a></li>
<form method="post" action="/cart/delete/{{_id}}">
  <div class="form-group">
  <button type="submit" class="btn btn-primary">Remove from cart</button>
  </div>
</form>
{{/each}}
</ul>
<form method="post" action="/cart/delete">
  <div class="form-group">
  <button type="submit" class="btn btn-primary">Remove all items from cart</button>
  </div>
</form>
<a href="/products">Return to products</a>
<form action="/cart" method="POST">
  <input type="text" name="name" placeholder="Name">
  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="{{publicKey}}"
    data-amount="999"
    data-name="Demo Site"
    data-description="Widget"
    data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
    data-locale="auto">
  </script>
</form>