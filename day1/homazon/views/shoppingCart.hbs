<style>
  img{
    height:100px;
  }
  .panel{
    width:400px;
  }
  #address{
    text-align: center;
  }
  div{
    margin-top: 5px;
  }
</style>
<h1>Shopping Cart</h1>
<div class="container">
  <h2>Your items:</h2>
  {{#each cart}}
    <div class="outer-panel panel panel-default" style="display:inline-flex">
      <img class="product-thumbnail" src="{{this.imageUri}}"/>
      <div class="info">
        <form method="post" action="/cart/delete/{{this._id}}">
          <p class="title">{{this.title}}</p>
          <p class="description">{{this.description}}</p>
          <a class="btn btn-primary" href="/product/{{this._id}}">View Product</a>
          <input class="btn btn-primary" type="submit" value ="Remove item from Cart">
        </form>
      </div>
    </div>
  {{/each}}
</div>
<form method="post" action="/cart/delete">
  <input class="btn btn-primary" type="submit" value ="Empty Cart">
</form>
<h2>Your addresses:</h2>
{{#each shipping}}
  <div id="address" class="outer-panel panel panel-default">
    <p>{{this.name}}</p>
    <p>{{this.addressLine1}}</p>
    <p>{{this.addressLine2}}</p>
    <p>{{this.city}}, &nbsp{{this.state}} &nbsp{{this.zip}}</p>
    <p>{{this.country}}</p>
  </div>
{{/each}}
<div>
  <a class="btn btn-primary" href="/shipping">Add your shipping info!</a>
</div>

<!--<form action="/your-server-side-code" method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">-->
<div class="container">
  <form action="/your-server-side-code" method="POST" class="form-horizontal" role="form">
    <fieldset>
      <legend>Payment</legend>
      <div class="form-group">
        <label class="col-sm-3 control-label" for="card-holder-name">Name on Card</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" name="cardName" id="card-holder-name" placeholder="Card Holder's Name">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label" for="card-number">Card Number</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" name="cardNumber" id="card-number" placeholder="Debit/Credit Card Number">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label" for="expiry-month">Expiration Date</label>
        <div class="col-sm-9">
          <div class="row">
            <div class="col-xs-3">
              <select class="form-control col-sm-2" name="expireMonth" id="expiry-month">
                <option>Month</option>
                <option value="01">Jan (01)</option>
                <option value="02">Feb (02)</option>
                <option value="03">Mar (03)</option>
                <option value="04">Apr (04)</option>
                <option value="05">May (05)</option>
                <option value="06">June (06)</option>
                <option value="07">July (07)</option>
                <option value="08">Aug (08)</option>
                <option value="09">Sep (09)</option>
                <option value="10">Oct (10)</option>
                <option value="11">Nov (11)</option>
                <option value="12">Dec (12)</option>
              </select>
            </div>
            <div class="col-xs-3">
              <select class="form-control" name="expireYear">
                <option value="13">2013</option>
                <option value="14">2014</option>
                <option value="15">2015</option>
                <option value="16">2016</option>
                <option value="17">2017</option>
                <option value="18">2018</option>
                <option value="19">2019</option>
                <option value="20">2020</option>
                <option value="21">2021</option>
                <option value="22">2022</option>
                <option value="23">2023</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-3 control-label" for="cvv">Card CVV</label>
        <div class="col-sm-3">
          <input type="text" class="form-control" name="cvv" id="cvv" placeholder="Security Code">
        </div>
      </div>
    </fieldset>
    <script
      src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="{{process.env.sh}}"
      data-amount="999"
      data-name="Demo Site"
      data-description="Widget"
      data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
      data-locale="auto">
    </script>
  </form>
</div>
<div>
  <a class="btn btn-primary" href="/payment">Add your payment info!</a>
</div>
<div>
  <a class="btn btn-primary" href="/checkout">Checkout!</a>
</div>
