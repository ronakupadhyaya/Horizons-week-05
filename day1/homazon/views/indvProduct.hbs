<h2 class="center"><img src="{{user.pictureURL}}"/> Logged in as {{user.username}}</h2>
<h3>Product: {{product.title}} </h3>
<br>
<div class = "solo col-xs-10 col-xs-offset-1">
  <div class = "image-container col-xs-3">
    <img src="{{product.imageUri}}" alt="some-alternate">
  </div>
  <div class = "words col-xs-7">
    <div class = "title">
      <h3>{{product.title}}</h3>
    </div>
    <div class = "description">
      <h5>{{product.description}}</h5>
    </div>
    <div class = "add-to-cart">
      <form action="/cart/add/{{productID}}" method="post">
        <button class="btn btn-primary btn-danger">Add to Cart</button>
      </form>
      <a class="btn btn-warning" href="/product">Back</a>
    </div>
  </div>
  <div class = "col-xs-2 price">
    <h4>{{product.price}}</h4>
  </div>
</div>
<a class="btn btn-primary btn-danger" href="/logout">Logout</a>
