<div class="index-screen">
  <h1 id="heading">Product</h1>
  <a class="waves-effect waves-light btn" id="logout" href="/logout">Logout</a>
  <a class="waves-effect waves-light btn" href="/">Back to products</a>
  <a class="waves-effect waves-light btn" href="/cart">Cart</a>
  
  <div class="container-fluid">
    <div class="row">
        <img src='{{product.imageUri}}'id="productImage" />
        <a class="waves-effect waves-light btn" id="adddelete" href="/cart/add/{{product._id}}">Add to cart</a>
        <h2 id="title">{{product.title}}</h2><p>${{product.price}}</p>
        <p id="description">{{product.description}}</p>
    </div>
  </div>
</div>
