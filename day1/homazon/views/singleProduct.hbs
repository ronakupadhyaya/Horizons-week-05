<h2 class="center">Logged in as {{user.username}}</h2>
<h3>Single Product</h3>
<table class="table table-hover">

  <tbody>
  <tr>
    <td>{{product.title}}</td>
    <td>{{product.description}}</td>
    <td><img src="{{product.imageUri}}" style="max-width:30%"></td>
  </tr>
  </tbody>
</table>
<form method="post" action="/cart/add/{{product.id}}">
<a class="btn btn-primary"><button>Add to Cart</button></a>
</form>
