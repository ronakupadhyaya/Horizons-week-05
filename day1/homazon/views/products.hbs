<h2 class="center"> Logged in as {{user.username}}</h2>
<h3>Products</h3>
<table class="table table-hover">
  <tbody>
{{#each products}}
  <tr>
    <td><img src="{{imageUri}}" height="100" width="100"/></td>
    <td><a href="/product/{{_id}}">{{title}}</a></td>
    <td>{{description}}</td>
    <td>$ {{price}}</td>
  </tr>
{{/each}}
  </tbody>
</table>
