<a href="/logout" style="float:right;margin-right:5%" class="btn btn-lg btn-primary" role="button">Logout</a>

<div class="container" style="margin-top:5%">
  <h2>Products</h2>
  <p>What our vendors have available at this time</p>
  <table class="table table-striped" style="width:60%">
    <tbody>
      {{#each products}}
      <tr>
        <td><img style="width:130px;height:100px;display:inline-block" src="{{this.imageUri}}"/></td>
        <td><h3>{{this.title}}</h3><p>{{this.description}}</p><h4 style="float:right">${{this.price}}</h4><a href="/product/{{this._id}}" class="btn btn-md btn-primary" role="button">View</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
