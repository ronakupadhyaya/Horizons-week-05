<div class="container" style="padding-bottom: 40px;">
  <h1> Product List </h1>
  {{#each products}}
    <div class="row">
      <div class="col-sm-3"><img class="col-sm-12" src="{{this.imageUri}}"></div>
      <div class="col-sm-6">
      <h3>{{this.title}} </h3>
      <p> {{this.description}}</p>
    </div>
    <div class="col-sm-3">
      <a href="/admin/edit/product/{{this._id}}" class="btn btn-success"> Edit product </a>
      <a href="/admin/delete/product/{{this._id}}" class="btn btn-danger"> Delete product </a>
    </div>
  </div>

  {{/each}}

  <div class="row text-center">
    <a href="/admin/product/new" class="btn btn-primary"> Create new product </a>
  </div>
</div>
