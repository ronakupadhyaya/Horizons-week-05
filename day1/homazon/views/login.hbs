<form class="form-horizontal well" action="/login" method="post">
  <div class="form-group">
    <label class='control-label col-xs-4'>Username</label>
    <div class="input-group col-xs-4">
      <span class="input-group-addon"><i class='glyphicon glyphicon-user'></i></span>
      <input type="text" name='username' class="form-control" placeholder="Username" required>
    </div>
  </div>
  <div class="form-group">
    <label class='control-label col-xs-4'>Password</label>
    <div class="input-group col-xs-4">
      <span class="input-group-addon"><i class='glyphicon glyphicon-lock'></i></span>
      <input type="password" name='password' class="form-control" placeholder="Password" required>
    </div>
  </div>
  <div class="form-group">
    <label class='control-label col-xs-4'></label>
    <button class='btn btn-primary col-xs-4' type="submit">Submit</button>
  </div>
  <div class="form-group">
    <label class='control-label col-xs-4'></label>
    <a class='btn btn-success col-xs-4' href="/signup">Go to Register</a>
  </div>
</form>