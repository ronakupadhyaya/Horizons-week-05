<h2 class="center"><img src="{{user.pictureURL}}"/> Logged in as {{user.username}}</h2>
<h3 class="center"> Products </h3>
<div class= "all-products col-xs-10 col-xs-offset-1">
	<legend></legend>
  {{#each products}}
  <div class = "single-product">
  	<a href="/product/{{_id}}">
	    <div class = "image-container col-xs-3">
	      <img src="{{imageUri}}">
	    </div>
	    <div class = "words col-xs-7">
	      <div class = "title">
	        <h3>{{title}}</h3>
	      </div>
	      <div class = "description">
	        <h5>{{description}}</h5>
	      </div>
	    </div>
	    <div class = "col-xs-2 price">
	      <h4>${{price}}</h4>
	    </div>
    </a>
  </div>
  <legend></legend>
  {{/each}}
</div>

