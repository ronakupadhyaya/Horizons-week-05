<h1>{{title}}</h1>
<p>Welcome to {{title}}'s page</p>
<a href="/logout" class="btn btn-primary">Logout</a>

<h3> Products </h3>
<div class= "all-products col-xs-10 col-xs-offset-1">
  {{#each products}}
  <div class = "single-product">
    <div class = "image-container col-xs-3">
      <img src="{{imageUri}}">
    </div>
    <div class = "words col-xs-7">
      <div class = "title">
        <h3>{{title}}</h3>
      </div>
      <div class = "description">
        <h5>{{description}}</h5>
      </div>
    </div>
    <div class = "col-xs-2 price">
      <h4>${{price}}</h4>
    </div>
    <form method='post' action='/cart/add/{{_id}}'>
      <button class="col-xs-2 btn btn-danger">
        Add to the cart
      </button>
    </form>
    <a href="/product/{{_id}}"></a>
  </div>
  {{/each}}
</div>
