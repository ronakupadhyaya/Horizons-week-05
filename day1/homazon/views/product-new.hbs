<div class="container">
<h1 style="margin-bottom: 20px;"> Edit Product Listing </h1>
<form class="form-horizontal" action="/admin/product/new" method="post" style="margin-top: 30px;">
  <div class="form-group">
    <label class="col-xs-2"> Image URL </label>
    <div class="col-xs-10">
      <input class="form-control" name="imageUri" ></input>
    </div>
  </div>
  <div class="form-group">
    <label class="col-xs-2"> Product Title </label>
    <div class="col-xs-10">
      <input class="form-control" name="title"></input>
    </div>
  </div>
  <div class="form-group">
    <label class="col-xs-2"> Product description</label>
    <div class="col-xs-10">
      <input class="form-control" name="description"></input>
    </div>
  </div>
  <div class="form-group">
    <label class="col-xs-2"> Product Price </label>
    <div class="col-xs-10">
      <input class="form-control" type="number" name="price"></input>
    </div>
  </div>
  <button type="submit" class="btn btn-success"> Create Product </button>
</form>
</div>
