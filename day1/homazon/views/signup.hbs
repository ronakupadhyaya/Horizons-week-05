<div class="top-buttons">
    <a href="/login">Login</a>
    <a href="/signup">Signup</a>
</div>
<div class="container signup-div">
    <form method="post" action="/signup"> <div class="form-group">
            <input type="text" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Name">
        </div>

        <div class="form-group">
            <input type="password" class="form-control" name="password" id="Password1" placeholder="Password">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="confirm-password" data-match="#Password1" placeholder="Confirm Password">
        </div>
        <button type="submit" class="btn btn-success">Signup</button>
    </form>
</div>
