<!-- username password password repeat -->
{{#if error}}
<div class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  {{error}}
</div>
{{/if}}

<panel class="form">
  <form method="POST" action="/signup" style="max-width: 500px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
    <h3>Register</h3>
    <div class="form-group">
      <label>Username</label>
      <input type="text" name="username" class="form-control">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" name="pass" class="form-control">
    </div>
    <div class="form-group">
      <label>Repeat Password</label>
      <input type="password" name="reppass" class="form-control">
    </div>
    <div class="form-group">
      <button class="btn btn-success">Register</button>
    </div>
  </form>
</panel>
