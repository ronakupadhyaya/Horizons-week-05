<h3>Profile for {{user.username}}</h3>

<h4>Name:</h4>
<p>{{user.name}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.address}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div>{{name}}
{{!--at least add link to gardens --}}
  </div>
{{/each}}

<h4>Gardens:</h4>
{{#each garden}}
  <p>
  	What's growing: {{cropType}}
  </p>
{{/each}}
  <form  action="/unfollow/{{_id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>