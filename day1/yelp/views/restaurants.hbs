{{#if hasPrev}}
	<a href="/restaurants/list/{{previous}}" class="btn btn-default">Previous Page</a>
{{/if}}
{{#if hasNext}}
	<a href="/restaurants/list/{{next}}" class="btn btn-default">Next Page</a>
{{/if}}
<ul>
	{{#each restaurants}}
	<li><a href="/restaurants/{{_id}}">{{name}}</a></li>
	<li>{{price}}</li>
	{{/each}}
</ul>

<nav>
  <ul class="pagination">
    </li>
    {{#each array}}
    <li><a href="/restaurants/list/{{this}}">{{this}}</a></li>
    {{/each}}
  </ul>
</nav>