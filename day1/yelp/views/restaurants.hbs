<a href="/profiles" style="float:right">Profiles</a>
<a href="/restaurants/new" style="float:right;margin-right: 10px">Want to Add a Restaurant?</a>

{{#each restaurants}}
<a href="/restaurants/{{_id}}">
  <form style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
      <p>{{name}}</p>
      <p>{{range}}</p>
  </form>
</a>
{{/each}}
<nav>
 <ul class="pagination">
     {{#if prev}}
   <li>
     <a href="/restaurants/list/{{prev}}" aria-label="Previous">
       <span aria-hidden="true">&laquo;</span>
     </a>
   </li>
   {{/if}}
   {{#each pageTotal}}
       <li id="{{this}}">
           <a href="/restaurants/list/{{this}}" aria-label="{{this}}">
           {{this}}
            </a>
       </li>
   {{/each}}
   {{#if hasNext}}
   <li>
     <a href="/restaurants/list/{{next}}" aria-label="Next" aria-label="Next">
       <span aria-hidden="true">&raquo;</span>
     </a>
   </li>
   {{/if}}
 </ul>
</nav>

<div style="display:none" id="pageNum">{{page}}</div>

<script>
var pageNum = $("#pageNum").text();
$("#" + pageNum).addClass("active");
</script>

<div style="float:right">
    <form style="padding-bottom: 20px" method="get" >
        Name
        <select name="name">
            <option value="1">Ascending</option>
            <option value="-1">Descending</option>
            <option value="0">No sorting</option>
        </select>
        <button class="btn btn-success">Submit</button>
    </form>
    <form method="get">
        Rating
        <select name="rating">
            <option value="1">Ascending</option>
            <option value="-1">Descending</option>
            <option value="0">No sorting</option>
        </select>
        Price
        <select name="price">
            <option value="1">Ascending</option>
            <option value="-1">Descending</option>
            <option value="0">No sorting</option>
        </select>
        <button class="btn btn-success">Submit</button>
    </form>
</div>
