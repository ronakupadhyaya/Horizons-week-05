<nav>
	<h1>Page:{{n}}</h1>
	
	<form class="form-inline">
		<div class="form-group col-sm-3">
	<label>Name</name>
	<select class="form-control" style="width:20vw" name="name">
		<option value="ascending">Ascending</option>
		<option value="descending">Descending</option>
	</select>
	<input type="submit" class="btn btn-primary" value="Submit">
</div>
</form>


<form class="form-inline">
	<div class="form-group col-sm-9">
	<label>Rating</label>
	<select class="form-control" style="width:20vw" name="rating">
		<option></option>
		<option value="ascending">Ascending</option>
		<option value="descending">Descending</option>
	</select>
	<label>Price</label>
	<select class="form-control" style="width:20vw" name="price">
		<option></option>
		<option value="ascending">Ascending</option>
		<option value="descending">Descending</option>
	</select>
	<input type="submit" class="btn btn-primary">
</div>
</form>

  <ul class="pagination">
    <li>
      <a href="{{prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pages}}
    <li><a href="{{this}}">{{this}}</a></li>
    {{/each}}
    
    <li>
      <a href="{{next}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
<ul>
{{#each restaurants}}
<li>
<h4><a href="/singleRestaurant/{{this._id}}">{{name}}</a></h4>
<p>Price: {{price}}</p>
<p>Category: {{category}}</p>
<p>Location: {{address}}</p>
<p>Rating: {{rating}} </p>
</li>
{{/each}}
</ul>