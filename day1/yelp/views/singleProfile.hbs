<h4>Following:</h4>
<table class="table table-striped">
<tr>
	<th>Name</th>
	<th>Email</th>
	<th></th>
</tr>
{{#each following}}
<tr>
	<td>{{to.displayName}}</td>
	<td>{{to.email}}</td>
	<td><a class="btn btn-default btn-red" href="/user/{{to._id}}">Visit profile</a></td>
</tr>
{{/each}}
</table>

<h4>Followers:</h4>
<table class="table table-striped">
<tr>
	<th>Name</th>
	<th>Email</th>
	<th></th>
</tr>
{{#each followers}}
<tr>
	<td>{{from.displayName}}</td>
	<td>{{from.email}}</td>
	<td><a class="btn btn-default btn-red" href="/user/{{from._id}}">Visit profile</a></td>
</tr>
{{/each}}
</table>




