<form action="/users/{{user._id}}" method = "post">
  {{#if isFollowing}}
  <input type = "submit" name = "follow" value = "Unfollow">
  {{else}}
  <input type = "submit" name = "follow" value = "Follow">
  {{/if}}
</form>

<h4>Following:</h4>
{{#each following}}
  <div>{{to.display}}
  <!-- <form  action="/users/{{to._id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form> -->
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{from.display}}</p>
{{/each}}
