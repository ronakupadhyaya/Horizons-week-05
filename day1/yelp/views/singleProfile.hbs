<h4>Name:</h4>
<p>{{user.displayName}}</p>
<form method="POST">
	<button type="submit" value="Follow">Follow Me!</button>
</form>
<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.address}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div><a href='/singleProfile/{{this.following._id}}'>{{this.following.displayName}}</a>
  <form  action="/unfollow/{{following.id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <a href='/profiles/{{this._id}}'> <p>{{follower.displayName}}></a></p>
{{/each}}

