<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Location:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div>{{to.displayName}}
    <form action="/unfollow/{{to.id}}" method="post">
      <input style="display: inline;" type="submit" value="Unfollow">
    </form>
  </div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{from.displayName}}</p>
  <p>{{from.location}}</p>
{{/each}}
