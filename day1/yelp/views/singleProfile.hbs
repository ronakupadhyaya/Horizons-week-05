<h1>{{user.displayName}}'s full profile</h1>

{{#if amIAlreadyFollowing}}
<form action="/profile/{{user._id}}/unfollow" method="post">
	<input type="submit" value="Unfollow">
</form>
{{else}}
<form action="/profile/{{user._id}}/follow" method="post">
	<input type="submit" value="Follow">
</form>
{{/if}}

<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
{{#each reviews}}
<p><strong>{{this.restaurant.name}}</strong></p>
<p>{{this.content}}</p>
<p>rating: {{this.stars}}</p>
{{/each}}

<h4>Following:</h4>
<ul>
{{#each following}}
  <li>{{this.to.displayName}}</li>
{{/each}}
</ul>

<h4>Followers:</h4>
{{#each followers}}
  <p>{{this.from.displayName}}</p>
{{/each}}

<a href="/" class="btn btn-default">Back</a>
