<h4>Name:</h4>

<form action="/profiles/{{user.displayName}}/{{decision.action}}" method="post">
  <input style="display: inline;" type="submit" value={{decision.value}}>
</form>

<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div>{{uid2.displayName}}
  <form action="/profiles/{{user.displayName}}/{{action}}" method="post">
    <input style="display: inline;" type="submit" value={{value}}>
  </form>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{uid1.displayName}}</p>
{{/each}}
