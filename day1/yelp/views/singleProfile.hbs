<h1>{{user.displayName}}'s full profile </h1>
{{#if amIAlreadyFollowing}}
<form action="/profile/{{user._id}}/unfollow" method="post">
	<input type ="submit" value="unfollow">
</form>
{{else}}
<form action="/profile/{{user._id}}/follow" method="post">
	<input type ="submit" value="follow">
</form>
{{/if}}
<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
<ul>
{{#each following}}
  <li>{{to.displayName}}</li>
{{/each}}
</ul>

<h4>Followers:</h4>
<ul>
{{#each followers}}
	<li>{{from.displayName}}</li>
{{/each}}
</ul>
