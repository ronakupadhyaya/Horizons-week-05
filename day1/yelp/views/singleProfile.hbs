<h4>Name:</h4>
<p>{{user.name}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Address:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <div>{{name}}
  <form  action="/unfollow/{{_id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{name}}</p>
{{/each}}

{{#if isFollowing}}
	<button type="button" class="btn btn-primary">Click to unfollow</button>
{{else}}
	<button type="button" class="btn btn-primary">Click to follow!</button>
{{/if}}