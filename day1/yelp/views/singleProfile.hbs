{{#if amIAlreadyFollowing}}
<form action="/profile/{{user._id}}/follow" method="post">
    <input type="submit" value="Unfollow">
  </form>
  {{else}}
  <form action="/profile/{{user._id}}/follow" method="post">
      <input type="submit" value="Follow">
    </form>
  {{/if}}

<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Location:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <li>{{this}}</li>
  <li>{{to.email}}</li>
  <div>{{to.displayName}}
  <form  action="/unfollow/{{userTo.id}}" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
  <p>{{following.location}}</p>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each allFollowers}}
  <p>{{from.displayName}}</p>
  <p>{{from.location}}</p>
{{/each}}
