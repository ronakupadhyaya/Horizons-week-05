<h1> Am I following: {{iAmFollowing}}</h1>
  <form action="/profile/{{user._id}}/unfollow" method="post">
      <input type="submit" name="unfollow" value="Unfollow">
  </form>
  <form action="/profile/{{user._id}}/follow" method="post">
      <input type="submit" name="follow" value="Follow">
  </form>

<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Location:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
<p>{{user.reviews}}</p>

<h4>Following:</h4>
{{#each following}}
  <!-- <li>{{this}}</li> -->
  <div><li>{{to.displayName}} <p style="color: grey">{{to.email}}</p></li>
  <form  action="/profile/{{_id}}/unfollow" method="post">
    <input style="display: inline;" type="submit" value="Unfollow">
  </form>
  <p>{{following.location}}</p>
</div>
{{/each}}

<h4>Followers:</h4>
{{#each allFollowers}}
  <p>{{from.displayName}}</p>
  <p>{{from.location}}</p>
{{/each}}
