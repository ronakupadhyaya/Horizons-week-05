<h1> Am I following: {{iAmFollowing}}</h1>
  <form action="/profile/{{user._id}}/unfollow" method="post">
      <input type="submit" name="unfollow" value="Unfollow">
  </form>
  <form action="/profile/{{user._id}}/follow" method="post">
      <input type="submit" name="follow" value="Follow">
  </form>

<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>

<h4>Location:</h4>
<p>{{user.location}}</p>

<h4>Reviews:</h4>
{{#each reviews}}
{{#each stars}}
