<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
  <h3>New Restaurant</h3>
  <div class="form-group">
    <label>Name</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label>Category</label>
    <input type="text" name="category" class="form-control">
  </div>
  <div class="form-group">
    <label>Relative Price</label>
    <input type="text" name="relativePrice" class="form-control">
  </div>
  <div class="form-group">
    <label>Address</label>
    <input type="text" name="address" class="form-control">
  </div>
  <div class="form-group">
    <label>Open Time</label>
    <input type="Number" name="openTime" class="form-control">
  </div>
  <div class="form-group">
    <label>Close Time</label>
    <input type="Number" name="closeTime" class="form-control">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Add Restaurant</button>
  </div>
</form>
