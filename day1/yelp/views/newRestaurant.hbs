<h1>Add a new restaurant</h1>
<br>

<form method="post" class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" name="name" class="form-control" placeholder="Restaurant name">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Category</label>
    <div class="col-sm-10">
      <input type="text" name="category" class="form-control" placeholder="Category">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
      <input type="text" name="price" class="form-control" placeholder="price">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Location</label>
    <div class="col-sm-10">
      <input type="text" name="location" class="form-control" placeholder="Address">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Open Time</label>
    <div class="col-sm-10">
      <input type="text" name="openTime" class="form-control" placeholder="Open time">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Close Time</label>
    <div class="col-sm-10">
      <input type="text" name="closeTime" class="form-control" placeholder="Close time">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default btn-red">Add Restaurant</button>
    </div>
  </div>
</form>

<a href="/restaurants" type="button" class="btn btn-link">Back to all restaurants</a>
