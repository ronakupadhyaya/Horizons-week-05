<form action="/restaurants/new" method="post">
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" name="newRestaurantName" placeholder="Enter Name">
  </div>
  <div class="form-group">
    <label>Category</label>
    <input type="text" class="form-control" name="newRestaurantCategory" placeholder="Enter Category">
  </div>
  <div class="form-group">
    <label>Relative Price</label>
    <input type="text" class="form-control" name="newRestaurantPrice" placeholder="Enter Price Range">
  </div>
  <div class="form-group">
    <label>Address</label>
    <input type="text" class="form-control" name="newRestaurantAddress" placeholder="Enter Address">
  </div>
  <div class="form-group">
    <label>Open Time</label>
    <input type="time" class="form-control" name="newRestaurantOpenTime" placeholder="Enter Open Time">
  </div>
  <div class="form-group">
    <label>Closing Time</label>
    <input type="time" class="form-control" name="newRestaurantClosingTime" placeholder="Enter Closing Time">
  </div>
  <button type="submit" class="btn btn-default" value="submit">Submit</button>
</form>
