<form class="form-horizontal" method="post">
  <div class="form-group">
    <div class="col-sm-10">
      <input name="name" type="text" class="form-control" placeholder="Name">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
       <select name="category" class="form-control" requried>
        <option>Mexican</option>
        <option>Food Stands</option>
        <option>Tex-Mex</option>
        <option>Food Trucks</option>
        <option>Pizza</option>
        <option>Bars</option>
        <option>Italian</option>
        <option>Mediterranean</option>
        <option>Indian</option>
        <option>Grocery</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
       <select name="price" class="form-control" requried>
          <option value="1">$</option>
          <option value="2">$$</option>
          <option value="3">$$$</option>
        </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <input name="address" type="text" class="form-control" placeholder="Address">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <input name="opentime" type="text" class="form-control" placeholder="Opening Time">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <input name="closetime" type="text" class="form-control" placeholder="Closing Time">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Restaurant</button>
    </div>
  </div>
</form>