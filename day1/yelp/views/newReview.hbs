<h3>New Review</h3>

<form role="form" method="post">
	<div class="form-group">
		<label for="stars">Stars: </label>
		<input type="text" class="form-control" name="stars">
	</div>
	<div class="form-group">
		<label for="review">Review: </label>
		<textarea class="form-control" rows="4" name="review"></textarea>
	</div>
	<button type="submit" class="btn btn-success">Save Review</button>
	<a href="http://localhost:3000/restaurants" class="btn btn-warning">Cancel</a>
</form>